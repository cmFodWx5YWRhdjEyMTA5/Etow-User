<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.user.etow.ui.widget.textview.TahomaRegularTextView
        android:id="@+id/lbl_auto_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/define_dimen_14"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:id="@+id/layout_use_current_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="@dimen/define_dimen_14">

        <ImageView
            android:layout_width="@dimen/define_dimen_20"
            android:layout_height="@dimen/define_dimen_20"
            android:src="@drawable/ic_location_black" />

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:id="@+id/tv_use_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_6"
            android:text="@string/use_current_location"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/dividerColor" />

</LinearLayout>