<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/define_dimen_8">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_14">

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_up_location"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:layout_marginTop="@dimen/define_dimen_2"
            android:text="123, First Time Street, Dubai, United Arap Emirated"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/define_dimen_4"
                android:layout_toStartOf="@+id/tv_status"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.user.etow.ui.widget.textview.TahomaRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday 19 Sep 2018"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_small" />

                <com.user.etow.ui.widget.textview.TahomaRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30 PM"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <com.user.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_status"
                android:layout_width="@dimen/define_dimen_150"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_grey_corner_radius_6"
                android:gravity="center"
                android:paddingBottom="@dimen/define_dimen_8"
                android:paddingEnd="@dimen/define_dimen_4"
                android:paddingStart="@dimen/define_dimen_4"
                android:paddingTop="@dimen/define_dimen_8"
                android:text="@string/no_driver_available"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
