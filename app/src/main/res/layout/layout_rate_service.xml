<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_14">

    <com.user.etow.ui.widget.textview.TahomaRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/how_was_your_trip"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_xnormal" />

    <RatingBar
        android:id="@+id/ratingbar"
        style="@style/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/define_dimen_14"
        android:layout_marginTop="@dimen/define_dimen_14" />

    <com.user.etow.ui.widget.textview.TahomaRegularTextView
        android:id="@+id/tv_rate_your_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_14"
        android:background="@drawable/bg_grey_corner"
        android:gravity="center"
        android:paddingBottom="@dimen/define_dimen_14"
        android:paddingTop="@dimen/define_dimen_14"
        android:text="@string/rate_your_trip"
        android:textColor="@color/textColorAccent"
        android:textSize="@dimen/text_size_normal" />

    <com.user.etow.ui.widget.textview.TahomaRegularTextView
        android:id="@+id/tv_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/define_dimen_10"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:background="@drawable/bg_white_corner_border_grey"
        android:gravity="center"
        android:paddingBottom="@dimen/define_dimen_14"
        android:paddingTop="@dimen/define_dimen_14"
        android:text="@string/skip"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_normal" />
</LinearLayout>
