<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_16">

            <ImageView
                android:layout_width="@dimen/define_dimen_100"
                android:layout_height="@dimen/define_dimen_100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:src="@drawable/ic_etow_and_text_black" />

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_50"
                android:background="@drawable/bg_white_corner_border_grey_radius_8"
                android:gravity="start"
                android:hint="@string/comments"
                android:imeOptions="actionDone"
                android:lines="10"
                android:padding="@dimen/define_dimen_12"
                android:textSize="@dimen/text_size_small" />

            <com.user.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/define_dimen_10"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:background="@drawable/bg_black_corner"
                android:gravity="center"
                android:paddingBottom="@dimen/define_dimen_14"
                android:paddingTop="@dimen/define_dimen_14"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />


            <com.user.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/define_dimen_10"
                android:layout_marginTop="@dimen/define_dimen_10"
                android:gravity="center"
                android:text="@string/get_in_touch_with_us_on"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
