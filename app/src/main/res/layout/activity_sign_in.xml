<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/define_dimen_100"
            android:layout_height="@dimen/define_dimen_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/define_dimen_50"
            android:src="@drawable/ic_etow_and_text_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/define_dimen_100"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_16">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_white_corner_border_grey_radius_8"
                android:hint="@string/email_id"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:padding="@dimen/define_dimen_12"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/define_dimen_12"
                android:background="@drawable/bg_white_corner_border_grey_radius_8"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="100"
                android:padding="@dimen/define_dimen_12"
                android:singleLine="true"
                android:textSize="@dimen/text_size_small" />

            <com.user.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:background="@drawable/bg_black_corner"
                android:gravity="center"
                android:paddingBottom="@dimen/define_dimen_14"
                android:paddingTop="@dimen/define_dimen_14"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />

            <com.user.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:paddingTop="@dimen/define_dimen_6"
                android:paddingBottom="@dimen/define_dimen_6"
                android:text="@string/forgot_password"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/define_dimen_20"
                android:layout_marginTop="@dimen/define_dimen_26"
                android:gravity="center"
                android:orientation="horizontal">

                <com.user.etow.ui.widget.textview.TahomaRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/do_not_have_account"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/text_size_normal" />

                <com.user.etow.ui.widget.textview.TahomaRegularTextView
                    android:id="@+id/tv_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/define_dimen_10"
                    android:text="@string/sign_up"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
