<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/define_dimen_8">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_14">

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_up_location"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:id="@+id/tv_pick_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:layout_marginTop="@dimen/define_dimen_2"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <com.user.etow.ui.widget.textview.TahomaRegularTextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</android.support.v7.widget.CardView>
